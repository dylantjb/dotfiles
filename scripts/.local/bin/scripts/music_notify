#!/bin/sh

music_home="$HOME/Music"
album="$(dirname "$(/opt/homebrew/bin/mpc --format '%file%' current)")"
if [ -f "$music_home/$album/cover.jpg" ]; then 
  art="$music_home/$album/cover.jpg"
elif [ -f "$(dirname "$music_home/$album")/cover.jpg" ]; then
  art="$(dirname "$music_home/$album")/cover.jpg"; else
  art=""; fi

/opt/homebrew/bin/terminal-notifier -title ncmpcpp -subtitle "Now Playing" -message "$(/opt/homebrew/bin/mpc --format '%title% - %artist%' current)" -contentImage "$art" -sender io.mpv
