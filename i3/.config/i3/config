# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.config/i3/volume up
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.config/i3/volume down
bindsym XF86AudioMute exec --no-startup-id ~/.config/i3/volume mute
bindsym XF86AudioMicMute exec --no-startup-id ~/.config/i3/microphone

# Controls player actions
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause && $refresh_i3status
bindsym XF86AudioStop exec --no-startup-id playerctl stop && $refresh_i3status
bindsym XF86AudioPrev exec --no-startup-id playerctl previous && $refresh_i3status
bindsym XF86AudioNext exec --no-startup-id playerctl next && $refresh_i3status

# Adjusting backlight brightness using light
bindsym XF86MonBrightnessUp exec --no-startup-id light -A 10
bindsym XF86MonBrightnessDown exec --no-startup-id light -U 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec $term

# start a network dmenu
bindsym $mod+n exec networkmanager_dmenu -i -b &

# start rofi bluetooth
